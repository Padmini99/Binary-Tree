// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
class Node {
    public:
    int data;
    Node* left;
    Node* right;
    Node(int data) {
        this->data=data;
        this->left = NULL;
        this->right = NULL;
    }
};
void buildTree(Node* root){
    cout<<"enter data:";
    int data;
    cin>>data;
    root=new Node(data);
    if(data == -1){
        return ;
    }
    cout<<"enter data for inserting in left of"<<data<<endl;
    buildTree(root->left);
    cout<<"enter data for inserting in right of"<<data<<endl;
   buildTree(root->right);
}
int main() {
    Node* root=NULL;
    buildTree(root);
}
